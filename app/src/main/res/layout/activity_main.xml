<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test"

    >    <FrameLayout
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimary"

    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="20dp"
        android:src="@drawable/brnadfa"/>


</FrameLayout>

    <android.support.v4.widget.DrawerLayout


        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="3"
            >        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:background="@drawable/card_shadow">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >            <com.balysv.materialripple.MaterialRippleLayout

                android:id="@+id/hotles"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:background="@drawable/radius_btn_accent"
                android:maxWidth="250dp"
                android:minWidth="150dp"
                android:visibility="visible"
                android:layout_margin="6dp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#ddd"
                app:mrl_rippleDelayClick="true"
                android:layout_weight="1"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="4dp">
                <egs.dolania.views.CButton
                    android:id="@+id/hotelsbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_btn_accent"
                    android:maxWidth="250dp"
                    android:minWidth="150dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="10dp"
                    android:paddingStart="0dp"
                    android:text="هتل ها"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout

                    android:id="@+id/cars"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_weight="1"

                    android:background="@drawable/carsradius"
                    android:maxWidth="250dp"
                    android:minWidth="150dp"
                    android:layout_margin="6dp"

                    android:visibility="visible"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#ddd"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="4dp">

                    <egs.dolania.views.CButton
                        android:id="@+id/carsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/carsradius"
                        android:maxWidth="250dp"
                        android:minWidth="150dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp"
                        android:paddingStart="0dp"
                        android:text="خودرو ها"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >            <com.balysv.materialripple.MaterialRippleLayout

                android:id="@+id/ships"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:background="@drawable/shipsradius"
                android:maxWidth="250dp"
                android:minWidth="150dp"
                android:visibility="visible"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="#ddd"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                android:layout_margin="6dp"

                android:layout_weight="1"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="4dp">

                <egs.dolania.views.CButton
                    android:id="@+id/shipsbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shipsradius"
                    android:maxWidth="250dp"
                    android:minWidth="150dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="10dp"
                    android:paddingStart="0dp"
                    android:text="کشتی ها"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout

                    android:id="@+id/tours"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"

                    android:background="@drawable/tourradius"
                    android:maxWidth="250dp"
                    android:minWidth="150dp"
                    android:visibility="visible"
                    android:layout_margin="6dp"

                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#ddd"
                    app:mrl_rippleDelayClick="true"
                    android:layout_weight="1"

                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="4dp">

                    <egs.dolania.views.CButton
                        android:id="@+id/toursbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tourradius"
                        android:maxWidth="250dp"
                        android:minWidth="150dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp"
                        android:paddingStart="0dp"
                        android:text="تور ها"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </com.balysv.materialripple.MaterialRippleLayout>
                <com.balysv.materialripple.MaterialRippleLayout

                    android:id="@+id/flights"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:background="@drawable/flightscolor"
                    android:maxWidth="250dp"
                    android:minWidth="150dp"
                    android:visibility="visible"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#ddd"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="4dp">

                    <egs.dolania.views.CButton
                        android:id="@+id/flightsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/flightscolor"
                        android:maxWidth="250dp"
                        android:minWidth="150dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp"
                        android:paddingStart="0dp"
                        android:text="پرواز ها"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
          <ImageView
              android:id="@+id/img1"
              android:scaleType="fitXY"
android:padding="@dimen/_11sdp"
              android:layout_width="match_parent"
              android:src="@drawable/ttt"
              android:layout_height="@dimen/_130sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="@dimen/_90sdp">
                <ImageView
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/img2"
                    android:layout_width="0dp"
                    android:scaleType="fitXY"

                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp" />
                <ImageView
                    android:id="@+id/img3"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"

                android:orientation="horizontal"
                android:layout_height="@dimen/_90sdp">
                <ImageView
                    android:id="@+id/img4"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp" />
                <ImageView
                    android:id="@+id/img5"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_90sdp" />
            </LinearLayout>
</LinearLayout>
            </ScrollView>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
